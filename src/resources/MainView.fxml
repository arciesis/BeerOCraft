<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="xyz.beerocraft.controller.MainCtrl">
   <children>
      <MenuBar prefHeight="453.0" prefWidth="600.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <TabPane fx:id="firstTabPane" prefHeight="453.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <tabs>
          <Tab fx:id="fermentablesTab" text="Fermentables">
            <content>
                  <SplitPane>
                     <items>
                        <GridPane prefHeight="368.0" prefWidth="600.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints maxHeight="312.0" minHeight="10.0" prefHeight="44.0" vgrow="SOMETIMES" />
                            <RowConstraints maxHeight="324.0" minHeight="10.0" prefHeight="324.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <TextField fx:id="textfieldSearchMalts" onKeyReleased="#maltsKeyHasBeenReleased" prefHeight="0.0" prefWidth="296.0" />
                              <ListView fx:id="listOfFermentablesTab" onMouseClicked="#maltsMouseClicked" prefHeight="257.0" prefWidth="300.0" GridPane.rowIndex="1" />
                           </children>
                        </GridPane>
                     </items>
                  </SplitPane>
            </content>
          </Tab>
          <Tab fx:id="hopsTab" text="Hops" />
          <Tab fx:id="yeastsTab" text="Yeasts" />
        </tabs>
         <padding>
            <Insets top="25.0" />
         </padding>
      </TabPane>
   </children>
</AnchorPane>
